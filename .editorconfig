root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,css,scss,less}]
indent_size = 2

[*.{prisma,graphql}]
indent_size = 2

[package.json]
indent_size = 2

[*.lock]
indent_size = 2